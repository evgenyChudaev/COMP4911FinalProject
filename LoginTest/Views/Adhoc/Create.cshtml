@model LoginTest.Models.Adhoc

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Adhoc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option>Adhoc report</option>
                    <option>Analytics</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="RequiredByDate" class="control-label"></label>
                <input asp-for="RequiredByDate" class="form-control" />
                <span asp-validation-for="RequiredByDate" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <textarea asp-for="Details" class="form-control"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>



        </form>
    </div>
</div>

<div class="form-group">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
