@model LoginTest.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
                       
           
            <div class="form-group">
                <label asp-for="RequiredByDate" class="control-label"></label>
                <input asp-for="RequiredByDate" class="form-control" />
                <span asp-validation-for="RequiredByDate" class="text-danger"></span>
            </div>       

           

            <div class="form-group">
                <label asp-for="RequiredService" class="control-label"></label>
                <select asp-for="RequiredService" class="form-control">
                    <option>Software Upgrade</option>
                    <option>Software Installation/Removal</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="RequiredService" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TicketDetails" class="control-label"></label>
                <textarea asp-for="TicketDetails" class="form-control"></textarea>
                <span asp-validation-for="TicketDetails" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

